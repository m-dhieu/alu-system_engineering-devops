#!/usr/bin/env bash
# Configure Nginx to run as nginx user and listen on all IPs:8080

# Change user in nginx.conf (usually /etc/nginx/nginx.conf)
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Change port to 8080 in default server config (commonly /etc/nginx/sites-available/default)
sed -i 's/listen .*/listen 8080;/' /etc/nginx/sites-available/default

# Restart nginx to apply changes
service nginx restart
