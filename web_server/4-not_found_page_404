#!/usr/bin/env bash
# Configure Nginx so that the custom 404 page returns "Ceci n'est pas une page"

apt-get update -y
apt-get install -y nginx

# Create the custom 404 page in the default Nginx web root
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Remove any existing error_page directive
sed -i '/^\s*error_page/d' /etc/nginx/sites-available/default

# Append the error_page directive and location block after server_name line
sed -i '/^\s*server_name /a \
    error_page 404 /custom_404.html;\n\
    location = /custom_404.html {\n\
        root /var/www/html;\n\
        internal;\n\
    }' /etc/nginx/sites-available/default

# Reload Nginx to apply changes (without systemctl)
service nginx reload || nginx -s reload
